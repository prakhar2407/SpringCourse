<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id = "employeeBean" class="com.ncu.ByConstructor.Employee" autowire="constructor">
        <constructor-arg name="employeeName" value="Archit Aggarwal"/>
    </bean>

    <bean id="address" class="com.ncu.ByConstructor.Address">
        <property name="pinCode" value="765489"/>
    </bean>

    <bean id="department" class="com.ncu.ByConstructor.Department">
        <property name="deptName" value="ECE"/>
    </bean>

</beans>